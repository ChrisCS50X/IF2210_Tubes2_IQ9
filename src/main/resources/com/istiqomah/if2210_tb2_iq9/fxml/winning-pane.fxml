<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<StackPane stylesheets="@../css/win.css" styleClass="win-page" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.istiqomah.if2210_tb2_iq9.WinController">
    <VBox alignment="CENTER" prefHeight="340.0" prefWidth="450.0" spacing="10">
        <ImageView fitHeight="268.0" fitWidth="451.0">
            <image>
                <Image url="@../asset/win.png" />
            </image>
        </ImageView>
        <VBox alignment="CENTER">
            <Label fx:id="winner" text="Player 1" styleClass="winner-text"/>
            <HBox alignment="CENTER" spacing="50">
                <Label text="Player 1" styleClass="player-detail"/>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="25.0" fitWidth="35.0">
                        <image>
                            <Image url="@../card/image/Icon/gulden.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="player1gulden" text="100" styleClass="player-detail"/>
                </HBox>
            </HBox>
            <HBox alignment="CENTER" spacing="50">
                <Label text="Player 2" styleClass="player-detail"/>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="25.0" fitWidth="35.0">
                        <image>
                            <Image url="@../card/image/Icon/gulden.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="player2gulden" text="100" styleClass="player-detail"/>
                </HBox>
            </HBox>
        </VBox>
        <Button fx:id="closeButton" styleClass="close-button" text="CLOSE" onAction="#handleCloseButton"/>
    </VBox>
</StackPane>
