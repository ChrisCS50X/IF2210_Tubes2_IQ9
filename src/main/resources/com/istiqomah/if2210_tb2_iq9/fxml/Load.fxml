<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.istiqomah.if2210_tb2_iq9.LoadController" prefWidth="750" prefHeight="650" stylesheets="@../css/setting.css" styleClass="wood-window">
    <padding>
        <Insets top="100"/>
    </padding>
    <Button fx:id="backButton" text="BACK" layoutX="20" layoutY="20" styleClass="back-button"/>
    <Label text="LOAD" layoutX="350" layoutY="50" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white" />

    <Label text="Format" layoutX="200" layoutY="150" style="-fx-font-weight: bold; -fx-text-fill: white"/>
    <ComboBox fx:id="formatComboBoxplug" layoutX="300" layoutY="150" prefWidth="200">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value=".txt"/>
                <!-- Add more formats as needed -->
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Folder" layoutX="200" layoutY="200" style="-fx-font-weight: bold; -fx-text-fill: white"/>
    <TextField fx:id="folderTextField" layoutX="300" layoutY="200" prefWidth="200"/>

    <Button fx:id="loadButton" text="Load" layoutX="300" layoutY="250" prefWidth="200" />
    <Label fx:id="statusLabel" text="State Loaded Successfully" layoutX="300" layoutY="300" style="-fx-text-fill: green;" visible="false" />
</AnchorPane>
